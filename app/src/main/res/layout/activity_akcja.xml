<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zahor.budzetosobisty.Akcja"
    android:background="#ffbbfaff">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Podejmij akcję"
            android:id="@+id/tytul2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Wpłać"
            android:id="@+id/dodajBtn"
            android:layout_marginTop="39dp"
            android:singleLine="false"
            android:layout_below="@+id/tytul2"
            android:layout_centerHorizontal="true"
            android:textSize="25dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Wypłać"
            android:id="@+id/odejmijBtn"
            android:layout_below="@+id/dodajBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Statystyki"
            android:id="@+id/statBtn"
            android:layout_below="@+id/odejmijBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Wykres"
            android:id="@+id/wykresBtn"
            android:textSize="25dp"
            android:layout_below="@+id/statBtn"
            android:layout_alignParentStart="true" />




</RelativeLayout>
